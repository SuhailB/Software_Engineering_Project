    <Button
        android:id="@+id/LoadParkingSpots"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:elevation="15dp"
        android:text="@string/load_parking_spots" />

    <TextView
        android:id="@+id/seeTime"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_alignLeft="@+id/currentTime"
        android:layout_alignStart="@+id/currentTime"
        android:layout_alignTop="@+id/LoadParkingSpots"
        android:hint="@string/time" />




